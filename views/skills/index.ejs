<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>Skills as of <%= time %></h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <a href="/skills/<%= skill._id %>"><%= skill.power %></a>
          - 
        <%= skill.competent ? 'competent' : 'incompetent' %>
      </li>
    <% }) %>
  </ul>
  <a href="/skills/new">Add Skills</a>
</body>
</html>
